<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose how to share your grocery list:"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_share_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share All Items"
        app:icon="@android:drawable/ic_menu_share"
        android:layout_marginBottom="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_share_purchased"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share Purchased Items Only"
        app:icon="@android:drawable/ic_menu_agenda"
        android:layout_marginBottom="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_share_whatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share via WhatsApp"
        app:icon="@android:drawable/ic_menu_send"
        android:layout_marginBottom="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_share_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share via Email"
        app:icon="@android:drawable/ic_dialog_email"
        android:layout_marginBottom="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_share_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share via SMS"
        app:icon="@android:drawable/ic_dialog_info"
        android:layout_marginBottom="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_copy_clipboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy to Clipboard"
        app:icon="@android:drawable/ic_menu_edit"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

</LinearLayout>
